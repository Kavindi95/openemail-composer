server_host = {{ MAIL_LDAP_SERVER_HOST }}
server_port = {{ MAIL_LDAP_SERVER_PORT }}
version = 3
bind = yes
start_tls = no
bind_dn = cn=vmail,o=openemail,{{ MAIL_LDAP_BASE_DN }}
bind_pw = {{ MAIL_LDAP_BIND_PW }} 
search_base = o=openemail,{{ MAIL_LDAP_BASE_DN }}
scope = sub
query_filter = (&(&(objectClass=VirtualMailAccount)(mail=%s))(vacationActive=FALSE)(forwardActive=TRUE)(accountActive=TRUE)(delete=FALSE))
result_attribute = maildrop
