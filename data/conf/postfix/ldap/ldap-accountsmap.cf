server_host = {{ LDAP_SERVER_HOST }}
server_port = {{ LDAP_SERVER_PORT }}
version = 3
bind = yes
start_tls = no
bind_dn = cn=vmail,o=openemail,{{ MAIL_LDAP_BASE_DN }}
bind_pw = {{ MAIL_LDAP_BIND_PW }}
search_base = o=hosting,{{ MAIL_LDAP_BASE_DN }}
scope = sub
query_filter = (&(&(objectClass=VirtualMailAccount)(mail=%s))(forwardActive=FALSE)(accountActive=TRUE)(delete=FALSE))
result_attribute = mail 
